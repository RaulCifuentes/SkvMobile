<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_edit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_code"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <TextView
            android:hint="Internal code of the project: SKVNNN, NNN are numbers 0-9."
            android:id="@+id/mapping_gral_info_code_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />


        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_project"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/mapping_gral_info_project_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />


        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_tunnel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/mapping_gral_info_tunnel_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_face"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/mapping_gral_info_face_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_section"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/mapping_gral_info_section_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            >

            <TextView
                android:hint="DD/MM/YYYY"
                android:id="@+id/mapping_gral_info_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="date" />

            <Button
                android:id="@+id/mapping_gral_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="l" />

        </LinearLayout>

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_geologist"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <TextView
            android:hint="Extracted from login."
            android:id="@+id/mapping_gral_info_geologist_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_initial_pk"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <!--
                <com.metric.skava.app.widget.MaskedEditText
                    android:id="@+id/mapping_gral_info_initial_pk_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom_edit:mask="##+###,##"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="@dimen/form_column_left_margin"
                    />-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <EditText
                android:id="@+id/mapping_gral_info_initial_pk_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|numberSigned|numberDecimal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="@dimen/form_column_left_margin"
                android:hint="Initial Peg N°" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView"
                android:text="Formatted Value"
                android:layout_weight="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@id/mapping_gral_info_initial_pk_value_formatted"
                android:singleLine="true" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_final_pk"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <EditText
                android:id="@+id/mapping_gral_info_final_pk_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|numberSigned|numberDecimal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="@dimen/form_column_left_margin"
                android:hint="Final Peg N°" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/mapping_gral_info_final_pk_value_formatted_label"
                android:text="Formatted Value"
                android:layout_weight="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@id/mapping_gral_info_final_pk_value_formatted"
                android:singleLine="true" />
        </LinearLayout>

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_actual_advance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            />


        <TextView
            android:hint="Accumuated sum of advances"
            android:id="@+id/mapping_gral_info_actual_advance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="@dimen/form_column_left_margin" />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_accum_advance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            />


        <TextView
            android:hint="Absolute value of last Peg N° substracted from actual Peg N°"
            android:id="@+id/mapping_gral_info_accum_advance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="@dimen/form_column_left_margin" />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_method"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <Spinner
            android:id="@+id/mapping_gral_info_method_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_orientation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />

        <EditText
            android:hint="Degree of deviation from 0° (North)."
            android:id="@+id/mapping_gral_info_orientation_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:inputType="number"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height"

            />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapping_gral_info_slope"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"

            />


        <EditText
            android:hint="Percentage of deviation from horizontal: length divided by heigth."
            android:id="@+id/mapping_gral_info_slope_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:inputType="number|numberSigned|numberDecimal"

            />





    </GridLayout>

</ScrollView>