<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_span="2"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="2">

    <!--<TextView-->
    <!--android:layout_span="2"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="@string/report_macizo"-->
    <!--android:id="@+id/textView"-->
    <!--android:gravity="center"-->
    <!--android:textStyle="bold"-->
    <!--style="@style/ReportLabelContainerBox" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/summary_report_left_wall_pic"
            android:src="@drawable/skava_shadow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/summary_report_non_face_image_width"
            android:minHeight="@dimen/summary_report_non_face_image_height"
            android:maxHeight="@dimen/summary_report_non_face_image_height"
            android:maxWidth="@dimen/summary_report_non_face_image_width"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/summary_report_box_margin" />

        <ImageView
            android:id="@+id/summary_report_right_wall_pic"
            android:src="@drawable/skava_shadow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/summary_report_non_face_image_width"
            android:minHeight="@dimen/summary_report_non_face_image_height"
            android:maxHeight="@dimen/summary_report_non_face_image_height"
            android:maxWidth="@dimen/summary_report_non_face_image_width"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/summary_report_box_margin" />

        <ImageView
            android:id="@+id/summary_report_roof_pic"
            android:src="@drawable/skava_shadow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/summary_report_non_face_image_width"
            android:minHeight="@dimen/summary_report_non_face_image_height"
            android:maxHeight="@dimen/summary_report_non_face_image_height"
            android:maxWidth="@dimen/summary_report_non_face_image_width"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/summary_report_box_margin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center_horizontal">

        <ImageView
            android:id="@+id/summary_report_expanded_pic"
            android:layout_gravity="center"
            android:src="@drawable/skava_shadow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/summary_report_face_image_width"
            android:maxWidth="@dimen/summary_report_face_image_width"
            android:minHeight="@dimen/summary_report_face_image_height"
            android:maxHeight="@dimen/summary_report_face_image_height"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/summary_report_box_margin" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/summary_report_face_pic"
            android:src="@drawable/skava_shadow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/summary_report_face_image_width"
            android:maxWidth="@dimen/summary_report_face_image_width"
            android:minHeight="@dimen/summary_report_face_image_height"
            android:maxHeight="@dimen/summary_report_face_image_height"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_margin="@dimen/summary_report_box_margin" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="top|center_horizontal">

        <TextView
            style="@style/ReportLabelContainerBox"
            android:id="@id/summary_report_rock_sample_identification_label"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/rockmass_desc_rock_sample_identification" />

        <TextView
            android:id="@id/summary_report_rock_sample_identification_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="top|center_horizontal">

        <TextView
            android:id="@+id/summary_report_outcrop_description_label"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outcrop Geological Description"
            android:textStyle="bold"
            style="@style/ReportLabelContainerBox" />

        <TextView
            android:id="@+id/summary_report_outcrop_description_value"
            android:text="@string/sumary_report_outcrop_default_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box" />
    </LinearLayout>


</GridLayout>