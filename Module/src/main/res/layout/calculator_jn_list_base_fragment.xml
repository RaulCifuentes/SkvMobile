<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:background="@color/Black" -->
    <!-- > -->

    <TextView
        android:id="@+id/fragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />
    <!-- android:layout_gravity="top" -->

    <View
        android:id="@+id/division_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/suggestion_highlight_text" />
    <!-- android:layout_below="@id/fragmentTitle" -->

    <LinearLayout
        android:id="@+id/mappedIndexInputContainer"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <Space
            android:id="@+id/space"
            android:layout_height="@dimen/grid_space_separation_height"
            android:layout_width="@dimen/form_column_left_margin" />


        <CheckBox
            android:id="@+id/checkIntersection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q_jn_intersections"
            android:layout_gravity="right"
            android:checked="false" />

        <Space
            android:id="@+id/space"
            android:layout_height="@dimen/grid_space_separation_height"
            android:layout_width="@dimen/form_column_left_margin" />


        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:choiceMode="singleChoice"
            android:gravity="center" />
        <!--android:layout_centerInParent="true"-->
        <!-- android:layout_below="@id/division_line" -->
    </LinearLayout>

</LinearLayout> <!-- </RelativeLayout> -->
