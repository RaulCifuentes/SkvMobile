<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_macizo"
                android:id="@+id/textView"
                android:gravity="center"
                android:textStyle="bold"
                style="@style/ReportLabelContainerBox" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_tipo_fracturacion"
                android:id="@+id/textView2"
                android:textStyle="bold"
                style="@style/ReportLabelContainerBox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/report_tipo_fracturacion_value"
                android:background="@drawable/text_box" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_medida_bloques"
                android:id="@+id/textView4"
                android:textStyle="bold"
                style="@style/ReportLabelContainerBox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/report_medida_bloques_value"
                android:background="@drawable/text_box" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_juntas_m3"
                android:id="@+id/textView6"
                android:textStyle="bold"
                style="@style/ReportLabelContainerBox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/report_juntas_m3_value"

                android:background="@drawable/text_box" />
        </TableRow>

    </TableLayout>
    
</FrameLayout>