<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rqdInputContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <!--First row -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonMines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunnels &amp; Mines" />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height" />

        <RadioButton
            android:id="@+id/radioButtonFoundations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foundations" />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="@dimen/grid_space_separation_height" />

        <RadioButton
            android:id="@+id/radioButtonSlopes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slopes" />
    </RadioGroup>


    <Space
        android:layout_width="@dimen/grid_space_separation_width"
        android:layout_height="@dimen/grid_space_separation_height" />

    <FrameLayout
        android:id="@+id/lists_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listview_tunnels"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

        <ListView
            android:id="@+id/listview_foundations"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

        <ListView
            android:id="@+id/listview_slopes"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

    </FrameLayout>


</LinearLayout>


