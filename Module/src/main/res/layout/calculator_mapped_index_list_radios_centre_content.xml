<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rqdInputContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <!--First row -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <RadioButton
            android:id="@+id/radioButtonFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/radioButtonSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/radioButtonThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <Space
            android:layout_width="@dimen/grid_space_separation_width"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/radioButtonFourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fourth"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

    </RadioGroup>


    <Space
        android:layout_width="@dimen/grid_space_separation_width"
        android:layout_height="@dimen/grid_space_separation_height" />

    <FrameLayout
        android:id="@+id/lists_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listview_a"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

        <ListView
            android:id="@+id/listview_b"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

        <ListView
            android:id="@+id/listview_c"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

        <ListView
            android:id="@+id/listview_d"
            android:gravity="center"
            android:layout_gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

    </FrameLayout>


</LinearLayout>


