        <!-- Customize your theme here. -->
    </style>


    <style name="DayAppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->

    </style>


    <style name="NightAppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->

    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="ReportLabelContainerBox">
        <item name="android:textColor">@color/Black</item>
        <item name="android:background">@drawable/test_custom_background</item>
    </style>

    <style name="HeaderRow">
        <item name="android:background">@color/DeepSkyBlue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderText">
        <!--<item name="android:textColor">#0F7F0F</item>-->
        <item name="android:textColor">@color/White</item>
        <!--<item name="android:shadowColor">#AFFFFFFF</item>-->
        <!--<item name="android:shadowDx">1</item>-->
        <!--<item name="android:shadowDy">1</item>-->
        <!--<item name="android:shadowRadius">1.0</item>-->
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/table_border</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodyRow">
        <item name="android:background">#DFDFDF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodyValueRow">
        <item name="android:background">@color/Gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText">
        <!--<item name="android:textColor">#7F7F7F</item>-->
        <item name="android:textColor">@color/Black</item>
        <!--<item name="android:shadowColor">#AFFFFFFF</item>-->
